<body>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
        <div id="logo">
        </div>
    </div>    
        
        
        
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
        <div class="panel-container">
            <div class="login-panel panel-connexion panel-default">
                    <div class="panel-connexion-heading">
                        <h1>ETP Web Application</h1>
                    </div>
                    <div class="panel-body">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.message|trans }}</div>
                        {% endif %}
                        <form role="form"  method="POST" action="{{ path('login_check') }}">
                            <fieldset id="inputs">
                                    <input id="username" placeholder="Identifiant" name="_username" type="text"  value="{{ last_username }}" autofocus>
                                    <input id="password" placeholder="mot de passe" name="_password" type="password" value="">
                            </fieldset>
                                {# 
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                    </label>
                                </div>
                                #}
                                <!-- Change this to a button or input when using this as a form -->
                                <fieldset id="actions">
                                <input type="submit" id="submit" value="Se connecter" class="btn btn-lg btn-success btn-block">
                                <p>R&eacute;alisation P. LEGAL</p>
                            </fieldset>
                        </form>
                    </div>
            </div>
        </div>
        </div>
    </div>
    {# S'il y a une erreur, on l'affiche dans un joli cadre 
    {% if error %}
      <div class="alert alert-danger">{{ error.message|trans }}</div>
    {% endif %}
    <form id="login" method="POST" action="{{ path('login_check') }}">
        <h1>Web Application</h1>
        <fieldset id="inputs">
            <input id="username" type="text"     placeholder="Identifiant"   name="_username" value="{{ last_username }}" autofocus required>   
            <input id="password" type="password" placeholder="Mot de Passe"  name="_password" required>
        </fieldset>
        <fieldset id="actions">
            <input type="submit" id="submit" value="Connexion">
            <p>R&eacute;alisation P. LEGAL</p>
        </fieldset>
    </form>
    </div>
    <div id="footer">
        <ul>
            <p>Version B&ecirc;ta 1.0</p>
        </ul>
    </div>
